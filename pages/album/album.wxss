/* pages/album/album.wxss */
page{
  background: #fff;
}
.album{
  display: flex;
  justify-content: start;
  align-content: center;
  flex-wrap: wrap;
}
.album .tu{
  width: 186rpx;
  height: 186rpx;
  background: #b5b5b5;
  margin-bottom: 2rpx;
  margin-right: 2rpx;
  position: relative;
}
.album .tu .active{
  width: 40rpx;
  height: 40rpx;
  border-radius:50%;
  border: 2rpx solid #fff;
  background: #56e2c8;
  position: absolute;
  top: 10rpx;
  right: 10rpx;
}
.album .tu:nth-child(4n){
  margin-right: 0;
}
.footer{
  width: 100%;
  height: 98rpx;
  padding: 30rpx 0;
  display: flex;
  justify-content: space-around;
  align-content: center;
  position: fixed;
  bottom: 0;
  left: 0;
  border-top: 1rpx solid rgb(217, 217, 217);
  box-sizing: border-box;
  font-size: 28rpx;
}
.footer .right{
  width: 40rpx;
  height: 40rpx;
}
.footer .left{
  position: relative;
  width: 40rpx;
  height: 40rpx;
}
.footer .heng,.footer .shu{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  background: #000;
}
.footer .heng{
  width: 40rpx;
  height: 4rpx;
}
.footer .shu{
  width: 4rpx;
  height: 40rpx;
}