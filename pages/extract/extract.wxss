/* pages/extract/extract.wxss */

.heared {
  width: 100%;
  height: 360rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.heared .box {
  box-sizing: border-box;
  padding-top: 60rpx;
  text-align: center;
}

.heared .box .tu {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: #ccc;
  overflow: hidden;
  margin: 0 auto;
}

.heared .box .tu image {
  width: 100%;
  height: 100%;
}

.heared .box .text {
  margin-top: 22rpx;
  font-size: 28rpx;
  color: #292624;
}

.section {
  background: #fff;
  display: flex;
  justify-content: space-around;
  font-size: 30rpx;
  color: #292624;
  height: 100rpx;
  line-height: 100rpx;
  margin-bottom: 20rpx;
}


.bottom{
  padding:25rpx 28rpx;
  display: flex;
  flex-wrap:wrap; 
    border-bottom: 1rpx solid #b5b5b5;
}
.bottom .left text{
  float: left;
  height: 40rpx;
  font-size: 30rpx;
  display:inline-block;
  width: 185rpx;
  text-align: justify;
}
#text{
  width: 140rpx;
  display: flex;
  justify-content: space-between;
}
.bottom .left text::after{
  content: '';
  display:inline-block;
  width: 140rpx;
  text-align: justify;
}
.bottom .left view{
  margin-left:30rpx;
  width: 250rpx;
  height: 30rpx;
  /* background: red; */
  float: left;
}
.bottom .left input{
  width: 300rpx;
  height: 40rpx;
  color: #666;
  font-size: 26rpx;
  line-height: 40rpx;
}
.footer{
  background: #fff;
  padding:0 80rpx;
}
.footer .center{
  margin: 0 auto;
  padding: 40rpx 0 0 75rpx;
}
.footer .center text{
  float: left;
}
.footer .center input{
  width: 270rpx;
  height: 40rpx;
  box-sizing: border-box;
  border: 1rpx solid #000;
  padding:0 10rpx;
}
#button{
  width: 80rpx;
  height: 40rpx;
  font-size: 26rpx;
  line-height: 40rpx;
  background: #f19149;
  margin-top: 80rpx;
  padding: 0;
  margin-bottom: 40rpx;
}
.bottom1{
  padding: 0 70rpx;
}
.bottom1 .box{
  border-top:1rpx solid #b5b5b5; 
  padding: 40rpx 0;
  color: #b5b5b5;
  font-size: 23rpx;
}
.bottom1 .box view{
  margin-bottom: 20rpx;
}