/* pages/vip/vip.wxss */

.heard {
  background: #fff;
  height: 360rpx;
  text-align: center;
  line-height: 360rpx;
  /* margin-top: 20rpx; */
}

.heard image {
  width: 100%;
  height: 100%;
}

.conten {
  padding: 30rpx 50rpx;
  background: #fff;
}

.conten .top {
  width: 650rpx;
  height: 280rpx;
  background: #fff;
  /* margin-bottom: 30rpx; */
  position: relative;
  box-shadow: 0rpx 0rpx 15rpx 3rpx #b5b5b5;
}

.conten .text {
  display: flex;
  justify-content: center;
  text-align: center;
  padding: 30rpx 0 40rpx 0;
}

.conten .text .left, .conten .text .right {
  width: 30rpx;
  height: 4rpx;
  background: #000;
  margin: 25rpx 20rpx;
}

#button {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  width: 160rpx;
  height: 48rpx;
  background: #fff534;
  font-size: 26rpx;
  border-radius: 24rpx;
  line-height: 48rpx;
  float: right;
}

.conten .top .text {
  width: 650rpx;
  height: 280rpx;
  text-align: center;
  line-height: 130rpx;
  font-weight: bold;
}

.footer {
  padding: 55rpx 140rpx 115rpx;
  margin-bottom: 42rpx;
}

.footer .top {
  font-size: 27rpx;
}

.footer .texts {
  font-size: 27rpx;
  padding-left: 10rpx;
}

.footer .texts view {
  padding: 20rpx 0 0 0;
}
.down{
  background: #fff;
  padding: 10rpx 0 12rpx 0;
}
.down image{
  display: block;
  width: 30rpx;
  height: 25rpx;
  margin: 0 auto;
}
.tishi{
  background: #fff;
  padding-bottom: 65rpx;
}
.tishi image{
  width: 510rpx;
  height: 250rpx;
  display: block;
  margin: 0 auto;
}